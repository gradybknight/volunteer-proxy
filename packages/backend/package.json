{
  "name": "@volunteer-proxy/backend",
  "version": "1.0.0",
  "description": "Backend API for volunteer-proxy matching system",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "vitest run tests/unit --passWithNoTests",
    "test:watch": "vitest",
    "test:contract": "vitest run tests/contract",
    "test:integration": "vitest run tests/integration --passWithNoTests",
    "migrate": "tsx scripts/migrate.ts",
    "seed": "tsx scripts/seed.ts"
  },
  "dependencies": {
    "@effect/platform": "^0.58.0",
    "@effect/platform-node": "^0.53.0",
    "@effect/schema": "^0.67.0",
    "@fastify/cors": "^9.0.1",
    "@volunteer-proxy/shared": "workspace:*",
    "bcrypt": "^6.0.0",
    "effect": "^3.3.0",
    "fastify": "^4.26.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.9",
    "testcontainers": "^10.6.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
